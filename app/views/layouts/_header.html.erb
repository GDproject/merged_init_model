  <div class="container">
    <%= link_to t("football"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), "#" %></li>
        <li><%= link_to t("help"), "#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), '#' %></li>
              <li><%= link_to t("settings"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), delete_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), new_session_path %></li>
        <% end %>
      </ul>
    </nav>
